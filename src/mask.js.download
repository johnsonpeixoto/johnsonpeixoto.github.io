

function addMask(field, mask) {
    var readonly = $(field).attr("readonly");
    if (readonly && readonly.toLowerCase() !== 'false') {
        $(field).mask(mask);
    }
}

function setMask(context) {
    //Itens depreciados, use a classe .mask-xpto
    $(".cnpj", context).mask('00.000.000/0000-00');
    $(".cpf", context).mask('000.000.000-00');
    $(".cep", context).mask('00000-000');

    $(".datepicker", context).mask('00/00/0000');
    $(".calendar", context).mask('00/00/0000');
    $(".date", context).mask('00/00/0000');
    $('.time', context).mask('00:00:00');
    $('.date_time', context).mask('00/00/0000 00:00:00');
    $(".mask-cnpj", context).mask('00.000.000/0000-00');
    $(".mask-cpf", context).mask('000.000.000-00');
    $(".mask-cep", context).mask('00000-000');
    $(".cellphone", context).mask('(00) 00000-0000');
    $(".phone", context).mask('(00) 0000-0000');
    $(".competention", context).mask('00/0000');
    $('.zeroInteger', context).autoNumeric('init', { mDec: '0', aSep: '' });
    $('.integer', context).autoNumeric('init', { mDec: '0', aSep: '' });
    $('.percent', context).autoNumeric('init', { aSep: '.', aDec: ',', mDec: '4' });
    $('.money', context).autoNumeric('init', { aSep: '.', aDec: ',', mDec: '2', vMin: '-999999999.99' });
    $('.number', context).autoNumeric('init', { aSep: '.', aDec: ',', mDec: '2', vMin: '-999999999.99' });
    $('.maskCPFCNPJ').on("keydown", function (e) {
        var digit = e.key.replace(/\D/g, '');
        var value = $(this).val().replace(/\D/g, '');
        var size = value.concat(digit).length;
        $(this).mask((size <= 11) ? '000.000.000-00' : '00.000.000/0000-00');
    });
}

function setMaskCNPJ() {
    $(".cnpj").mask('00.000.000/0000-00');
}

function setMaskCPF() {
    $(".cpf").mask('000.000.000-00');
}

function setMaskPercent() {
    $('.percent').autoNumeric('update', { aSep: '.', aDec: ',', mDec: '4' });
}

function setMaskMoney() {
    $('.money').autoNumeric('update', { aSep: '.', aDec: ',', mDec: '2' });
}

function setControlMaskMoney(control) {
    $(control).autoNumeric('update', { aSep: '.', aDec: ',', mDec: '2' });
}

function setMaskCellphone(control) {
    $(control).mask('(00) 00000-0000');
}

function setMaskCEP(control) {
    $(control).mask('00000-000');
}